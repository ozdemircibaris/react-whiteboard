{
  "name": "react-whiteboard",
  "version": "0.1.0",
  "description": "Modern whiteboard library using TypeScript and Rough.js",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "whiteboard",
    "canvas",
    "drawing",
    "rough.js",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "roughjs": "^4.6.0"
  },
  "peerDependencies": {
    "roughjs": "^4.6.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
