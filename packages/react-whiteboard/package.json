{
  "name": "@ozdemircibaris/react-whiteboard",
  "version": "0.0.1",
  "description": "A high-performance whiteboard library for React with Canvas rendering and React component support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "nanoid": "^5.0.9",
    "perfect-freehand": "^1.2.2",
    "roughjs": "^4.6.6",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.18.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "whiteboard",
    "canvas",
    "react",
    "drawing",
    "collaboration"
  ],
  "author": "ozdemircibaris",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ozdemircibaris/react-whiteboard"
  }
}
